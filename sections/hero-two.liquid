			"info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
		},
		{
			"type": "url",
			"id": "button_link",
			"label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "TITLE"
		},
		{
			"type": "textarea",
			"id": "subtext",
			"label": "Subtext",
			"default": " I<!-- -->'<!-- -->m baby kogi cardigan kitsch hammock banjo. Typewriter viral man braid hot chicken, farm-to-table fashion axe intelligentsia lomo green juice ramps irony succulents. "
		},
		{
			"type": "color",
			"id": "background",
			"label": "Background",
			"default": "#000000"
		},
		{
			"type": "range",
			"id": "opacity",
			"min": 0,
			"max": 100,
			"step": 1,
			"label": "Opacity",
			"default": 50
		},
		{
			"type": "image_picker",
			"id": "image2",
			"label": "Image 2"
		},
		{
			"type": "text",
			"id": "button_label2",
			"default": "Button label 2",
			"label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
			"info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
		},
		{
			"type": "url",
			"id": "button_link2",
			"label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
		},
		{
			"type": "text",
			"id": "title2",
			"label": "Title 2",
			"default": "TITLE"
		},
		{
			"type": "textarea",
			"id": "subtext2",
			"label": "Subtext 2",
			"default": " I<!-- -->'<!-- -->m baby kogi cardigan kitsch hammock banjo. Typewriter viral man braid hot chicken, farm-to-table fashion axe intelligentsia lomo green juice ramps irony succulents. "
		},
		{
			"type": "color",
			"id": "background2",
			"label": "Background 2",
			"default": "#000000"
		},
		{
			"type": "range",
			"id": "opacity2",
			"min": 0,
			"max": 100,
			"step": 1,
			"label": "Opacity 2",
			"default": 50
		}
	],
	"presets": [{
		"name": "Hero Two"
	}]
}
{% endschema %}
